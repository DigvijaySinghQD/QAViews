<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NotificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5f5f5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_baseline_lens_24"/>

                    <TextView
                        android:id="@+id/tvTextLabelFeedback"
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:text="Your audit Manager Mr. Shushant Banga has given your performance feedback."
                        android:gravity="center_vertical"
                        android:textColor="#434950"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_baseline_lens_24"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content"
                        android:text="Your audit Manager Mr. Shushant Banga has given your performance feedback... See more"
                        android:gravity="center_vertical"
                        android:textColor="#434950"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_baseline_lens_24"/>

                    <TextView
                        android:id="@+id/tvTextLabelFeedback1"
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:text="Based on your requirement, relevant artist manager will help you in booking."
                        android:gravity="center_vertical"
                        android:textColor="#434950"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:background="#88F5F5F5"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="35dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/circle_background">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_play_arrow_24_black"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="#888"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_baseline_lens_24_grey"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:text="Your audit Manager Mr. Shushant Banga has given your performance feedback."
                        android:gravity="center_vertical"
                        android:textColor="#434950"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_baseline_lens_24"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content"
                        android:text="Your audit Manager Mr. Shushant Banga has given your performance feedback... See more"
                        android:gravity="center_vertical"
                        android:textColor="#434950"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_baseline_lens_24_grey"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:text="Based on your requirement, relevant artist manager will help you in booking."
                        android:gravity="center_vertical"
                        android:textColor="#434950"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="#88F5F5F5"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="35dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/circle_background">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_play_arrow_24_black"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="#888"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>