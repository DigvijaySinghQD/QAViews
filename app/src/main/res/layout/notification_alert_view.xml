<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12A5A3A3">

    <LinearLayout
        android:id="@+id/linearLAyoutCancelAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="match_parent"
            android:text="Notification"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvCloseNotificationView"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#000"
        android:layout_margin="15dp"
        android:text="New audit have been done kindly check!"
        android:layout_marginBottom="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/tvRemindLater"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="Remind Later"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/corner_background"
            android:layout_marginTop="20dp"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btnCheckNow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Check Now"
            android:layout_margin="5dp"
            android:background="@color/purple_700"
            android:layout_marginTop="20dp"
            android:textSize="13sp"/>

    </LinearLayout>


</LinearLayout>